<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure date</th>
      <th>Departure time</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %> </td>
        <td><%= f.departs.toISOString().split('T')[0].slice(5)+'-'+f.departs.toISOString().split('T')[0].slice(0,4)%> </td>
        <td><%= Number(f.departs.toString().slice(16,18)) < 12 ? String(Number(f.departs.toString().slice(16,18)))+f.departs.toString().slice(18,24)+' AM' : String(Number(f.departs.toString().slice(16,18))-12)+f.departs.toString().slice(18,24)+' PM'%> </td>
        <!-- <td><%= f.departs.toISOString().split('T')[1].slice(0,8)%> </td> -->
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
